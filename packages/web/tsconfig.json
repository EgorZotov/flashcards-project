{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "images/*": [
        "src/images/*"
      ],
      "styles/*": [
        "src/styles/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "themes/*": [
        "src/themes/*"
      ],
      "types/*": [
        "src/types/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "webpack"
  ]
}